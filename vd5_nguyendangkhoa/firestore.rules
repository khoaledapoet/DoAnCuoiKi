rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Rules for users collection
    match /users/{userId} {
      // Allow users to read/write their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Rules for cart subcollection
      match /cart/{cartItemId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Rules for favorites subcollection
      match /favorites/{pizzaId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Rules for orders subcollection
      match /orders/{orderId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Rules for pizzas collection
    match /pizzas/{pizzaId} {
      // Allow anyone to read pizzas
      allow read: if true;
      // Only allow authenticated users to write (admins should have additional checks)
      allow write: if request.auth != null;
    }
    
    // Rules for orders collection (if you have a separate orders collection)
    match /orders/{orderId} {
      // Allow users to read their own orders
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      // Allow users to create their own orders
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Only allow order updates by admins (you can add admin check here)
      allow update, delete: if request.auth != null;
    }
  }
}
